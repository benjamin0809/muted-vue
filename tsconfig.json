{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "noImplicitAny": false,
    "baseUrl": "./", 
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["shared/*"],
    },
    "types": ["element-plus/global"]
  },
  "include": ["mock/**/*.ts", "shared/**/*.ts", "shared/**/*.d.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
